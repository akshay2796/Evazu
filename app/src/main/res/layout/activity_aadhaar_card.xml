<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AadhaarCard"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_aadhaar"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:background="@color/yellow_signin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/back_button" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="124dp"
        android:layout_gravity="center_vertical|bottom"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/aadhaar_icon"
        android:src="@drawable/aadhaar_bg"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_aadhaar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_aadhaar" />


    <ImageView
        android:id="@+id/aadhaarFront"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:src="@drawable/aadhaar_front_back"
        android:contentDescription="@string/aadhaar_image_placeholder"
        app:layout_constraintBottom_toTopOf="@+id/textView25"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/aadhaarBack"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar" />


    <TextView
        android:id="@+id/click_here_front"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/aadhaarFront"
        android:layout_alignTop="@id/aadhaarFront"
        android:layout_alignEnd="@id/aadhaarFront"
        android:layout_alignBottom="@id/aadhaarFront"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/click_here"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/aadhaarFront"
        app:layout_constraintEnd_toEndOf="@+id/aadhaarFront"
        app:layout_constraintStart_toStartOf="@+id/aadhaarFront"
        app:layout_constraintTop_toTopOf="@+id/aadhaarFront" />

    <ImageView
        android:id="@+id/aadhaarBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:padding="10dp"
        android:src="@drawable/aadhaar_front_back"
        android:contentDescription="@string/aadhaar_image_placeholder"
        app:layout_constraintBottom_toBottomOf="@+id/aadhaarFront"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/aadhaarFront"
        app:layout_constraintTop_toTopOf="@+id/textView23" />

    <TextView
        android:id="@+id/click_here_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/aadhaarBack"
        android:layout_alignTop="@id/aadhaarBack"
        android:layout_alignEnd="@id/aadhaarBack"
        android:layout_alignBottom="@id/aadhaarBack"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/click_here"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/aadhaarBack"
        app:layout_constraintEnd_toEndOf="@+id/aadhaarBack"
        app:layout_constraintStart_toStartOf="@+id/aadhaarBack"
        app:layout_constraintTop_toTopOf="@+id/aadhaarBack" />


    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aadhaarFront"
        android:layout_alignStart="@id/aadhaarFront"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/front_side"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/aadhaarFront"
        app:layout_constraintEnd_toStartOf="@+id/aadhaarBack"
        app:layout_constraintStart_toStartOf="@+id/aadhaarFront"
        app:layout_constraintTop_toTopOf="@+id/aadhaarFront" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aadhaarBack"
        android:layout_alignEnd="@id/aadhaarBack"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/back_side"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/aadhaarBack"
        app:layout_constraintStart_toStartOf="@+id/aadhaarBack"
        app:layout_constraintTop_toTopOf="@+id/aadhaarBack" />


    <TextView
        android:id="@+id/retakeFront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/retake"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/click_here_front"
        app:layout_constraintStart_toStartOf="@+id/click_here_front" />

    <TextView
        android:id="@+id/retakeBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/retake"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/click_here_back"
        app:layout_constraintStart_toStartOf="@+id/click_here_back" />


    <TextView
        android:id="@+id/textView25"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/enter_your_aadhaar_no"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657" />


    <EditText
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/step_one_box"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:hint="@string/hint_card"
        android:inputType="number"
        android:letterSpacing="0.35"
        android:maxLength="14"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/step_one_button"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/upload"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card"
        app:layout_constraintVertical_bias="0.918" />

    <Button
        android:id="@+id/skipBtn"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/step_one_button"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="@string/skip_for_now"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/continueBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>