<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StepOneProfile">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_stepone"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:background="@color/yellow_signin" />

    <ImageView
        android:layout_width="411dp"
        android:layout_height="124dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/mobile"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_stepone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_stepone" />


    <TextView
        android:id="@+id/firstNameTV"
        android:layout_width="104dp"
        android:layout_height="25dp"
        android:fontFamily="@font/montserrat"
        android:imeOptions="actionDone"
        android:text="First Name"
        android:textColor="@color/text_color2"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="266dp" />

    <EditText
        android:id="@+id/firstNameTxt"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/firstNameTV"
        android:background="@drawable/step_one_box"
        android:cursorVisible="true"
        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:fontFamily="@font/montserrat"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textCursorDrawable="@color/yellow_signin"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="296dp" />


    <TextView
        android:id="@+id/lastNameTV"
        android:layout_width="101dp"
        android:layout_height="25dp"
        android:fontFamily="@font/montserrat"
        android:text="Last Name"
        android:textColor="@color/text_color2"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="359dp" />

    <EditText
        android:id="@+id/lastNameTxt"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/lastNameTV"
        android:background="@drawable/step_one_box"
        android:cursorVisible="true"
        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:fontFamily="@font/montserrat"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textCursorDrawable="@color/yellow_signin"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="389dp" />


    <EditText
        android:id="@+id/phoneTxt"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/step_one_box"
        android:cursorVisible="true"
        android:fontFamily="@font/montserrat"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="phone"
        android:maxLength="10"
        android:paddingStart="100dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textCursorDrawable="@color/yellow_signin"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="466dp" />

    <ImageView
        android:id="@+id/indianFlag"
        android:layout_width="46dp"
        android:layout_height="27dp"
        android:layout_alignTop="@id/phoneTxt"
        android:layout_alignBottom="@id/phoneTxt"
        android:gravity="center"
        android:padding="5dp"
        android:src="@drawable/india_flag"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="475dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/phoneTxt"
        android:layout_alignBottom="@id/phoneTxt"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="+91"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="476dp" />


    <Button
        android:id="@+id/takeSelfie"
        android:layout_width="303dp"
        android:layout_height="51dp"
        android:background="@drawable/step_one_button"
        android:padding="10dp"
        android:text="Continue"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="664dp" />

</android.support.constraint.ConstraintLayout>